@page "/recipe/{RecipeId:Guid}"
@inject RecipeRepository _recipeRepository

@using System.Text
@using System.Globalization
@using System.Resources
@using System.Collections
@using BMelt.ClassLibrary.Repository

<BMelt.ClassLibrary.Razor.Recipe Model=@Model />

@code {
    [Parameter]
    public Guid RecipeId { get; set; }

    private BMelt.ClassLibrary.Models.Recipe Model { get; set; }

    protected override async Task OnInitializedAsync()
    {
        Model = await _recipeRepository.GetRecipeAsync(RecipeId);
    }
}
